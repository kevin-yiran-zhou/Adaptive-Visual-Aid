<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"/>

    <Switch
        android:id="@+id/switchHeyAva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activate voice assistant by 'Hey AVA'"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <Switch
        android:id="@+id/switchTapGlass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activate voice assistant by tapping smartglass"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <Switch
        android:id="@+id/switchCameraAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use audio from microphone on the smartglass"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <Switch
        android:id="@+id/switchUsbCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use USB camera on the smartglass"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btnSaveAndRestart"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Save"
        android:padding="5dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:background="?attr/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"/>

</LinearLayout>
