<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"/>

    <Switch
        android:id="@+id/switchHeyAva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activate voice assistant by 'Hey AVA'"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <Switch
        android:id="@+id/switchTapGlass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activate voice assistant by tapping glass frame"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <Switch
        android:id="@+id/switchCameraAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use audio from microphone on the camera"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <Switch
        android:id="@+id/switchUsbCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use USB camera on the smartglass"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="10dp"/>

</LinearLayout>
