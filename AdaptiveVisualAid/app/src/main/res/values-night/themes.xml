<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Black Theme) -->
    <style name="Theme.AdaptiveVisualAid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary color (Toolbar / Top Bar) -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item> <!-- White text on black -->

        <!-- Secondary color (Buttons) -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item> <!-- White text on black -->

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Apply custom button style -->
        <item name="android:buttonStyle">@style/ButtonWhiteStyle</item>
    </style>
</resources>
